import json
import urllib.request

def is_prime(n):
    # Prime Numbers
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

def is_perfect(n):
    # Perfect numbers 
    if n < 2:
        return False
    divisors = [i for i in range(1, n) if n % i == 0]
    return sum(divisors) == n

def is_armstrong(n):
    if n < 0:
        return False
    digits = list(str(n))
    length = len(digits)
    return sum(int(d)**length for d in digits) == n

def lambda_handler(event, context):
    try:
        # Expecting the URL to have a query string like: ?number=371 or ?number=-5
        number = int(event['queryStringParameters']['number'])
    except Exception:
        return {
            'statusCode': 400,
            'body': json.dumps({'number': 'invalid', 'error': True})
        }
    
    properties = []
    if number < 0:
        properties.append("negative")
    if is_armstrong(number):
        properties.append("armstrong")
    properties.append("even" if number % 2 == 0 else "odd")
    
    # Gets a fun fact from the Numbers API using urllib.request
    try:
        with urllib.request.urlopen(f"http://numbersapi.com/{number}/math") as response:
            fun_fact = response.read().decode('utf-8')
    except Exception:
        fun_fact = "No fun fact available."
    
    return {
        'statusCode': 200,
        'headers': {'Content-Type': 'application/json'},
        'body': json.dumps({
            'number': number,
            'is_prime': is_prime(number),
            'is_perfect': is_perfect(number),
            'properties': properties,
            # Use absolute value for digit sum so that "-" isn't processed
            'digit_sum': sum(int(d) for d in str(abs(number))),
            'fun_fact': fun_fact
        })
    }
